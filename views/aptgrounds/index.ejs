    <%layout('layouts/boilerplate') %> 
    <div id="cluster-map"></div>
    <div class="container">
    <h1>All Aptgrounds</h1>
    
    
    <% for (let aptground of aptgrounds){%>
       <div class="card mb-3">
           <div class="row">
               <div class="col-md-4">
                <%if(aptground.images.length) {%>
                <img class="img-fluid" alt="" src="<%=aptground.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/deson8lht/image/upload/v1647567248/YelpCamp/hr7jpx7ls4mlguykm5ex.jpg">
                <% } %>
               </div>
               <div class="col-md-8">
                   <div class="card-body">
                       <h5 class="card-title"><%=aptground.title%> </h5>
                       <p class="class-text"><%=aptground.description %> </p>
                       <p class="class-text">$<%= aptground.price%>/month</p>
                       <p class="card-text">
                           <small class="text-muted"><%=aptground.location %> </small>
                       </p>
                       <a class="btn btn-primary" href="/aptgrounds/<%=aptground._id%> ">View <%=aptground.title%></a>
                   </div>
               </div>
           </div>
       </div>
    <% } %> 
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const aptgrounds = { features: <%- JSON.stringify(aptgrounds) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>

